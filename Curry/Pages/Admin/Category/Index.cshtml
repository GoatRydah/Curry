@page
@model Curry.Pages.Admin.Category.IndexModel

@using Curry.Utility
@if (User.IsInRole(SD.ManagerRole))
{
    <div class="bg-white container border">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-md-6 text-right">
                <a asp-page="upsert" class="btn btn-primary m-3"><i class="fas fa-plus"></i>&nbsp;Create New</a>
            </div>
        </div>
        <br /> <br />
        <table id="DT_Load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
}
else
{
    <div>
        <h1 class="danger">Access Denied</h1>
    </div>
}
@section Scripts {
    <script src="~/js/category.js"></script>
}